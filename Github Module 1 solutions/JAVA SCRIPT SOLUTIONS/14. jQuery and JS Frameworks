//main.js

$(document).ready(function () {
  $('#registerBtn').click(function () {
    $('#eventCard').fadeIn(500); // Show with fade
    setTimeout(() => {
      $('#eventCard').fadeOut(500); // Auto-hide after 3s
    }, 3000);
  });
});
